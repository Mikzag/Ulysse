{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    <div class="col-sm-6 col-sm-offset-3">

        <div class="page-header">
            <h1>Se Connecter</h1>
        </div>

        {% if error %}
            {% if error|trans({}, 'FOSUserBundle') == 'Bad credentials.' %}
                <div class="alert alert-danger">
                    <strong>Identifiants incorrects</strong>
                </div>
            {% else %}
                <div class="alert alert-danger">
                    <strong>Le mot de passe est incorrect</strong>
                </div>
            {% endif %}
        {% endif %}
        <div class="well bs-component">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <fieldset>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                        <input type="text" id="username" class="form-control" name="_username"
                               value="{{ last_username }}" required="required"/>
                    </div>

                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                        <input type="password" id="password" class="form-control" name="_password"
                               required="required"/>
                    </div>

                    <div class="checkbox">
                        <label for="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me"
                                   value="on"/> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                        </label>
                    </div>

                    <input type="submit" id="_submit" class="btn btn-primary pull-right" name="_submit"
                           value="Se connecter"/>
                    <br><br>
                    <a href="{{ path('fos_user_registration_register') }}"
                       class="btn btn-success pull-right">S'inscrire</a>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock fos_user_content %}
