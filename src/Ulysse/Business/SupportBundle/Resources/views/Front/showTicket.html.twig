{% extends ':front:base.html.twig' %}

{% block body %}

    <div class="col-md-8 col-md-offset-2 ticket_page">
        <div class="row">
            <div class="row">
            <div class="page-header">
                <h1>{% if ticket.fenced == false %}
                        <span class="label label-success">Ouvert</span>
                    {% else %}
                        <span class="label label-danger">Ferm√©</span>
                    {% endif %}{{ ticket.title }}
                    <small class="pull-right ref">Ref {{ ticket.id }}</small>
                </h1>
            </div>
            <p class="well">{{ ticket.content }}</p>
                </div>

            {% for response in ticket.response %}
                <div class="row {% if app.user == response.user %} {% endif %}">
                    <div class="col-md-8 {% if app.user == response.user %}col-md-offset-4 text-right{% endif %}">
                        <div class="row">
                            <p><strong>{{ response.user.username }}</strong></p>
                        </div>
                        <div class="row">
                            <div class="thumbnail {% if app.user == response.user %} {% endif %}">
                                {{ response.content }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <hr>
            <div class="row response_form">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
