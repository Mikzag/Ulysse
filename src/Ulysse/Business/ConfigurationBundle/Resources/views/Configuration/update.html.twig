{% extends 'UlysseBusinessProductBundle:Back:index.html.twig' %}

{% block body -%}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Configuration de l'application</h3>
                    </div>
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="box-body">
                        {{ form_row(form.shopname) }}
                        {{ form_row(form.legalNotice) }}
                        {{ form_row(form.logo) }}
                        {% if configuration.logo %}
                            <img src="{{ asset(configuration.logo.webPath) }}" alt="{{ configuration.logo.alt }}" height="200px"/>
                        {% endif %}
                    </div>
                    <div class="box-footer">
                        {{ form_row(form.btn) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}