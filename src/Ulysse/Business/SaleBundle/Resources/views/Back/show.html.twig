{% extends parent %}

{% block content %}
    {{ render(controller('UlysseBusinessSaleBundle:SaleBack:header')) }}
    <div class="row">
        <div class="col-md-3">
            {% include 'UlysseBusinessSaleBundle:Back:side.html.twig' %}
        </div>
        <div class="col-md-9">
            <div class="box">
                <center>
                    <a href="{{path('user_show_back', { id : entity.user.id })}}">@{{ entity.user.username }}</a>
                    <div>En vente depuis le {{ entity.dateadded | date('d/m/Y')}}.</div>
                    <h1>
                        <span id="idsale" idsale="{{ entity.id }}">#{{ entity.id }}</span> - 
                        {{ entity.name }}
                    </h1>
                    <p class="well">{{ entity.observation }}</p>
                    <p>
                        Il reste <strong>{{ entity.stock }}</strong> produit(s) à vendre pour un montant unitaire de <strong>{{ entity.price }}€</strong>.
                    </p>
                    {% if entity.blocked %}
                        <button class="btn btn-success sale_unblock" type="button" id="{{entity.id}}">Débloquer la vente</button>
                    {% else %}
                        <button class="btn btn-danger sale_block" type="button" id="{{entity.id}}">Bloquer la vente</button>
                    {% endif %}
                </center>
                <br>
            </div>
        </div>
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            {{ render(controller('UlysseBusinessPurchaseBundle:RatingBack:list', {sale : entity})) }}
        </div>
    </div>
{% endblock content %}
