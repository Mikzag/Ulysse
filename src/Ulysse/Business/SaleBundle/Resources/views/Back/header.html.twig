<div class="row">
    <div class="col-md-3 col-sm-6 col-xs-12" title="Fiches à valider">
        <div class="info-box">
            <span class="info-box-icon bg-aqua"><i class="ion ion-ios-people-outline"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Ventes terminées</span>
                <span class="info-box-number">{{countFinishedSale}}</span>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12" title="Fiches total">
        <div class="info-box">
            <span class="info-box-icon bg-yellow"><i class="ion ion-ios-people-outline"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Ventes en cours</span>
                <span class="info-box-number">{{countPendingSale}}</span>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12" title="Fiches total">
        <div class="info-box">
            <span class="info-box-icon bg-green"><i class="ion ion-ios-people-outline"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Total des produits en vente</span>
                <span class="info-box-number">{{countAllSale}}</span>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 col-xs-12" title="Fiches total">
        <div class="info-box">
            <span class="info-box-icon bg-red"><i class="ion ion-ios-people-outline"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Ventes bloquées</span>
                <span class="info-box-number">{{countBlockedSale}}</span>
            </div>
        </div>
    </div>
</div>